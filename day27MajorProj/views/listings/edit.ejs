<%- include('../layouts/header', {title: 'Edit Listing'}) %>
<html>

<body>
  <h2 class="w-full text-2xl text-center mx-auto py-4">Edit Listing</h2>

  <% const {_id,title, description, image, price, location, country} = listing
    %>
  <form action="/listings/<%= _id %>?_method=PUT" method="post" class="w-3/4 mx-auto md:text-sm">
    <label for="full-name" class="leading-7 text-sm text-gray-400">Title</label>
    <input type="text" class="placeholder:text-gray-600" name="listing[title]" id="title" placeholder="Super villa" value="<%= title  %>" required />

    <label for="full-name" class="leading-7 text-sm text-gray-400">Description</label>
    <textarea class="placeholder:text-gray-600 p-4" name="listing[description]" id="" cols="30" rows="5" placeholder="Sweet home sweet"><%= description  %></textarea>

    <label for="full-name" class="leading-7 text-sm text-gray-400">Image link</label>
    <input type="text" class="placeholder:text-gray-600" name="listing[image]" id="image" placeholder="https://example.com/720x420" value="<%= image  %>" />


    <div class="flex flex-col md:flex-row gap-3">
      <div class="md:w-1/2">
        <label for="full-name" class="leading-7 text-sm text-gray-400">Price</label>
        <input type="number" class="placeholder:text-gray-600" name="listing[price]" id="price" min="0" placeholder="1200" value="<%= price  %>" required />
      </div>

      <div class="md:w-1/2">
        <label for="full-name" class="leading-7 text-sm text-gray-400">Country</label>
        <input type="text" class="placeholder:text-gray-600" name="listing[country]" id="country" placeholder="India" value="<%= location  %>" required />
      </div>
    </div>

    <label for="full-name" class="leading-7 text-sm text-gray-400">Location</label>
    <input type="text" class="placeholder:text-gray-600" name="listing[location]" id="location" placeholder="Dakshinpuri, virat" value="<%= country  %>" required />


    <button class="w-full md:w-fit md:text-sm text-white bg-red-500 border-0 py-2 px-8 focus:outline-none hover:bg-red-600 rounded text-lg">Edit Listing</button>
  </form>
</body>

</html>