<%- include('header', {title: title}) %>
<header
  class="relative w-full text-gray-400 px-2 sticky top-0 bg-[#0f1418] z-0 h-full md:h-14 py-2"
>
  <div
    class="container flex flex-wrap justify-between gap-2 mx-auto align-middle md:h-14"
  >
    <div
      class="flex flex-wrap justify-between gap-2 align-middle h-fit leftt md:h-14"
    >
      <a
        href="/listings"
        class="flex items-center text-center text-gray-900 align-middle cursor-pointer h-fit"
      >
        <i class="text-3xl text-red-400 ri-compass-3-line md:text-2xl"></i>
        <span class="hidden ml-3 text-xl text-white md:block">WondersLand</span>
      </a>
      <nav
        class="flex flex-wrap justify-center h-8 gap-2 text-base text-center align-middle md:mr-auto md:ml-4 md:pl-4 md:border-l md:border-gray-400"
      >
        <a href="/listings" class="py-1 cursor-pointer hover:text-gray-600"
          >Home</a
        >
        <a href="/listings/new" class="py-1 cursor-pointer hover:text-gray-600"
          >New</a
        >
      </nav>
    </div>

    <div class="rightt md:py-1">
      <nav
        class="flex justify-end h-auto gap-4 text-base text-center align-middle"
      >
        <% if(!currUser){%>
        <a
          href="/login"
          class="h-8 m-0 text-sm cursor-pointer hover:text-gray-600"
          >Login</a
        >
        <a
          href="/signup"
          class="h-8 m-0 text-sm cursor-pointer hover:text-gray-600"
          >Signup</a
        >
        <% }else{ %> <%- include('../layouts/user') %> <% } %>
      </nav>
    </div>
  </div>
  <div class="absolute left-0 w-full mx-auto top-14">
    <%- include('successFlash') %> <%- include('errorFlash') %>
  </div>
</header>
