<%- include('header', {title: title}) %>
<header
  class="relative w-full text-gray-400 px-2 py-3 sticky top-0 bg-[#0f1418] z-0"
>
  <div
    class="container flex flex-wrap justify-between gap-2 mx-auto align-middle"
  >
    <div class="flex flex-wrap h-auto justify-between align-middle gap-2 leftt">
      <a
        href="/listings"
        class="flex items-center text-gray-900 align-middle cursor-pointer title-font"
      >
        <i class="text-3xl text-red-400 ri-compass-3-line md:text-2xl"></i>
        <span class="hidden ml-3 text-xl text-white md:block">WondersLand</span>
      </a>
      <nav
        class="flex flex-wrap justify-center align-middle text-center text-base md:mr-auto md:ml-4 md:py-1 md:pl-4 md:border-l md:border-gray-400"
      >
        <a
          href="/listings"
          class="mr-5 py-4 md:py-2 cursor-pointer hover:text-gray-600"
          >Home</a
        >
        <a
          href="/listings/new"
          class="mr-5 py-4 md:py-2 cursor-pointer hover:text-gray-600"
          >Add New</a
        >
      </nav>
    </div>

    <div class="rightt">
      <nav class="flex align-middle gap-4 h-auto justify-end text-base">
        <% if(!currUser){%>
        <a
          href="/login"
          class="h-8 text-sm cursor-pointer m-0 py-1 hover:text-gray-600"
          >Login</a
        >
        <a
          href="/signup"
          class="h-8 text-sm hover:text-gray-600 cursor-pointer m-0 py-1"
          >Signup</a
        >
        <% }else{ %> <%- include('../layouts/user') %> <% } %>
      </nav>
    </div>
  </div>
  <div class="absolute top-14 left-0 w-full mx-auto">
    <%- include('successFlash') %> <%- include('errorFlash') %>
  </div>
</header>
