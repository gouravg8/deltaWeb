<%- include('header', {title: "New Post" }) %>
    <html>

    <body>
        <form action="/<%= post.id %>?_method=PATCH" method="post" class="container my-8 w-3/4 md:w-1/2">
            <p class="my-2 px-2">
                @<%= post.username %>
            </p>
            <textarea class="p-4" name="caption" id="caption" cols="30" rows="5"
                placeholder="Enter your caption here"><%= post.caption %></textarea>
            <button type="submit" class="py-2 my-4 bg-blue-800 hover:bg-blue-700 text-lg font-semibold">Post</button>
        </form>
    </body>

    </html>