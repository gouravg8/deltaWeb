<%- include('header', {title:'Home'}) %>
    <html>

    <body class="relative">
        <form action="/new" method="get">
            <button
                class="ri-add-circle-line w-12 float-right text-3xl hover:text-blue-500 cursor-pointer bg-black fixed bottom-8 right-8 text-center rounded-full py-2"></button>
        </form>

        <div class="container py-8 md:w-1/2 lg:w-1/3 mx-auto">
            <% for( let post of posts ) { %>
                <div class="post mx-auto bg-gray-800 rounded px-3 py-4 my-3">
                    <img class="rounded" src="/<%= post.image %>" alt="<%= post.image %>" srcset="">
                    <div class="bottom my-4 flex justify-between align-middle gap-1">
                        <div class="unameCaption">
                            <p class="text-lg font-bold">@<%= post.username %>
                            </p>
                            <p class="text-lg ">
                                <%= post.caption %>
                            </p>
                        </div>
                        <a href="/<%= post.id %>/edit">
                            <i class="ri-pencil-line w-10 mr-4 text-xl cursor-pointer hover:text-blue-500"></i>
                        </a>
                        <form action="/<%= post.id %>?_method=DELETE" method="post">
                            <button class="ri-delete-bin-5-line w-10 mr-4 text-xl cursor-pointer hover:text-blue-500"></button>
                        </form>
                    </div>
                </div>
                <% } %>
        </div>
    </body>

    </html>