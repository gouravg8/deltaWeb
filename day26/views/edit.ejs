<%- include('header', {title: 'Edit message' }) %>
<html>
  <body>
    <% const {id, from, to, msg} = chat; %>
    <form
      action="/chats/<%= id %>?_method=PUT"
      method="post"
      class="posts px-4 my-5 flex flex-col gap-2"
    >
      <p>Id: <%= id %></p>

      <div class="fromto">
        <span> <%= from %> </span>
        <i class="ri-arrow-right-line"></i>
        <span> <%= to %> </span>
      </div>

      <textarea
        class="p-8"
        name="msg"
        placeholder="Enter your post here"
        id=""
        cols="30"
        rows="5"
      >
<%= msg %></textarea
      >

      <button type="submit" class="py-3 bg-blue-500 text-white">Change</button>
    </form>
  </body>
</html>
